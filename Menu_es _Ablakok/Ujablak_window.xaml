<Window x:Class="Menu_es__Ablakok.Ujablak_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu_es__Ablakok"
        mc:Ignorable="d"
        Title="Ujablak_window" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="YellowGreen">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Ez egy új abblak ami megjelen a gomb lenyomásra" 
            FontWeight="Bold" FontSize="25" Padding="5" HorizontalAlignment="Center"/>

        <Button x:Name="ButtonBezar" Grid.Row="2" Content="Bezárás" HorizontalAlignment="Right" MinWidth="100" FontSize="18" FontWeight="Bold"
                Margin="0,0,15,15" Click="ButtonBezar_Click"/>

    </Grid>
</Window>
